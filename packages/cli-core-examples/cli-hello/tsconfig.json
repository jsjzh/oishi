{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./typings",
    "strict": true,
    "importHelpers": true,
    "listEmittedFiles": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./src",
    "rootDir": "./core",
    "baseUrl": "./"
  },
  "include": ["./core/**/*.ts"]
}
